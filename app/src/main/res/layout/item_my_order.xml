<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/background_my_order"
            android:padding="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvMyName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Order Menu"
                        android:textColor="#6A90B5"
                        android:textSize="24dp" />

                    <ImageView
                        android:id="@+id/imageMyOrder"
                        android:layout_width="150dp"
                        android:layout_height="144dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="10dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvMyQty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quantity"
                            android:textStyle="bold"
                            android:textColor="#6A90B5"
                            android:textSize="23dp">

                        </TextView>

                        <ImageView
                            android:layout_width="33dp"
                            android:layout_height="17dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/x" />

                        <TextView
                            android:id="@+id/tvMyPrice"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:textSize="23dp"
                            android:textColor="#6A90B5"
                            android:fontFamily="@font/roboto_bold"
                            android:layout_marginStart="5dp"
                            android:layout_height="wrap_content"
                            android:text="Rp 20000" />

                    </LinearLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btnDelete"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:textAllCaps="false"
                        android:layout_alignParentRight="true"
                        android:textSize="15sp"
                        android:layout_marginTop="80dp"
                        android:textColor="#FF0000"
                        android:background="@drawable/btn_hapus"
                        android:text="Delete"></Button>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="6dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>