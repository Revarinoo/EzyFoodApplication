<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".TopUp.TopUpActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/amaranth_bold"
        android:text="My Wallet"
        android:textColor="#000"
        android:textSize="13pt">

    </TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="173dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:background="@drawable/card_topup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtnm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="My Balance"
                    android:textSize="7pt"
                    android:textColor="#fff"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginLeft="15dp"></TextView>

                <TextView
                    android:id="@+id/tvBalance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp 1.000.000"
                    android:textColor="#fff"
                    android:textSize="13pt"
                    android:layout_below="@id/txtnm"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roboto_bold"></TextView>

                <TextView
                    android:id="@+id/cardNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5134 - 3100 - 2498 - 7800"
                    android:layout_below="@id/tvBalance"
                    android:textColor="#fff"
                    android:textSize="8pt"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="25dp"></TextView>

                <TextView
                    android:id="@+id/cardName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Revarino Putra"
                    android:textColor="#fff"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="1dp"
                    android:textSize="9pt"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_below="@id/cardNum"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/amaranth"
                    android:text="BINUS"
                    android:textColor="#fff"
                    android:textSize="11pt"
                    android:textStyle="bold"></TextView>


            </RelativeLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/amaranth_bold"
        android:text="Amount"
        android:textColor="#000"
        android:textSize="20sp"></TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:ems="10"
        android:id="@+id/etAmount"
        android:textSize="24sp"
        android:drawableStart="@drawable/rp"
        android:paddingLeft="10dp"
        android:textColor="#000"
        android:background="@drawable/amount_line"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"></EditText>

    <Button
        android:id="@+id/btnTopUp"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:background="@drawable/button_topup"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="100dp"
        android:text="Top Up Now"></Button>


</LinearLayout>